# MTEB adapter container for eval-hub
# Evaluates embedding models using MTEB (Massive Text Embedding Benchmark)

FROM registry.access.redhat.com/ubi9/python-312:latest

# Switch to root to set up directories
USER 0

# Set working directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy adapter implementation
COPY main.py .

# Create writable cache directories with proper permissions
# HuggingFace models and datasets cache to /tmp for non-root access
RUN mkdir -p /tmp/.cache/huggingface && \
    chmod -R 777 /tmp && \
    chown -R 1001:0 /app && \
    chmod -R g+rwX /app

# Environment configuration
ENV PYTHONUNBUFFERED=1
ENV EVALHUB_MODE=k8s
ENV HOME=/tmp
ENV HF_HOME=/tmp/.cache/huggingface
ENV TRANSFORMERS_CACHE=/tmp/.cache/huggingface/transformers
ENV SENTENCE_TRANSFORMERS_HOME=/tmp/.cache/huggingface/sentence_transformers

# Switch back to non-root user for security
USER 1001

# Run the adapter
ENTRYPOINT ["python", "main.py"]
